<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_layout_main"
    android:background="@color/colorPrimary"
    >


    <ScrollView
        android:id="@+id/scroll_view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.leo.simplearcloader.SimpleArcLoader
                    android:visibility="visible"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:arc_colors="@array/colors_load_img"
                    app:arc_style="simple_arc"
                    app:arc_speed="medium"
                    app:arc_margin="3dp">
                </com.leo.simplearcloader.SimpleArcLoader>

                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                    android:background="@color/black"
                    android:visibility="gone"
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
                <RelativeLayout
                    android:id="@+id/relative_layout_fragement_video_thum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:adjustViewBounds="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/bg_transparant"
                        android:id="@+id/image_view_video_fragement_video"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/image_view_load_video_item"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="15dp"
                        android:src="@drawable/ic_play"
                        android:background="@drawable/play_background"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/relative_layout_progress_fragement_video"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="300dp"
                    android:layout_height="40dp">

                    <ProgressBar
                        android:progressDrawable="@drawable/progress_bg"
                        android:progress="0"
                        android:id="@+id/progress_bar_fragement_video"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="300dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/text_view_progress_fragement_video"
                        android:textSize="14dp"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:text="Loading : 0%"
                        android:textColor="@color/white"
                        android:layout_width="300dp"
                        android:layout_height="40dp" />
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/image_view_cancel_fragement_video"
                        android:padding="6dp"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_cancel"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/pause_bg"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>
            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:layout_below="@+id/cv"
                android:id="@+id/card_view_fragement_video"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                >
                <RelativeLayout
                    android:id="@+id/relative_layout_dialog_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_image_view_fragement_video_user"
                        android:padding="8dp"
                        android:src="@drawable/profile"
                        android:layout_width="60dp"
                        android:layout_height="60dp" />
                    <LinearLayout
                        android:layout_marginLeft="60dp"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <TextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:id="@+id/text_view_fragement_video_title"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:text="Water Wallpaper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView

                            android:id="@+id/text_view_fragement_video_name_user"
                            android:textColor="@color/light_white"
                            android:textStyle="italic"
                            android:text="Water Wallpaper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <Button
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/button_follow_user_activity"
                        android:textSize="10dp"
                        android:background="@color/white"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="@string/loading"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:id="@+id/linear_layout_control_image_fragment"
                android:layout_below="@+id/card_view_fragement_video"
                android:background="@drawable/border_bottom"
                android:padding="5dp"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/ripple_view_wallpaper_fav"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <com.like.LikeButton
                            android:layout_marginTop="6dp"
                            android:id="@+id/like_button_fav_fragement_video"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:circle_end_color="#aaff00"
                            app:circle_start_color="#0f89a4"
                            app:dots_primary_color="#aaff00"
                            app:dots_secondary_color="#0f89a4"
                            app:icon_size="40dp"
                            app:anim_scale_factor="10"
                            app:like_drawable="@drawable/ic_favorite_white"
                            app:unlike_drawable="@drawable/ic_favorite_border_white"
                            />

                        <TextView
                            android:textColor="#ffff"
                            android:text="@string/favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ripple_view_wallpaper_download"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/border_left"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <com.like.LikeButton
                            android:layout_marginTop="6dp"
                            android:id="@+id/like_button_download_fragement_video"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:circle_end_color="#aaff00"
                            app:circle_start_color="#0f89a4"
                            app:dots_primary_color="#aaff00"
                            app:dots_secondary_color="#0f89a4"
                            app:icon_size="30dp"
                            app:anim_scale_factor="10"
                            app:like_drawable="@drawable/ic_download"
                            app:unlike_drawable="@drawable/ic_download"
                            />

                        <TextView
                            android:textColor="#ffff"
                            android:text="@string/download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ripple_view_wallpaper_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/border_left"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <RelativeLayout
                            android:id="@+id/relativeLayout_1"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.like.LikeButton
                                android:layout_marginTop="6dp"
                                android:id="@+id/like_botton_share_fragement_video"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                app:circle_end_color="#aaff00"
                                app:circle_start_color="#0f89a4"
                                app:dots_primary_color="#aaff00"
                                app:dots_secondary_color="#0f89a4"
                                app:icon_size="30dp"
                                app:anim_scale_factor="10"
                                app:like_drawable="@drawable/ic_share_white"
                                app:unlike_drawable="@drawable/ic_share_white"
                                />
                        </RelativeLayout>
                        <TextView
                            android:textColor="#ffff"
                            android:text="@string/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ripple_view_wallpaper_comments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@drawable/border_left"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <RelativeLayout
                            android:id="@+id/relativeLayout_4"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.like.LikeButton
                                android:layout_marginTop="6dp"
                                android:id="@+id/like_botton_comment_activity_gif"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                app:circle_end_color="#aaff00"
                                app:circle_start_color="#0f89a4"
                                app:dots_primary_color="#aaff00"
                                app:dots_secondary_color="#0f89a4"
                                app:icon_size="30dp"
                                app:anim_scale_factor="10"
                                app:like_drawable="@drawable/ic_comment"
                                app:unlike_drawable="@drawable/ic_comment"
                                />
                            <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/text_view_wallpaper_comments_count"
                                android:background="@drawable/comments_border"
                                android:textColor="@color/colorPrimaryDark"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                android:text="0"
                                android:textSize="11dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <TextView
                            android:textColor="#ffff"
                            android:text="@string/comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_marginBottom="80dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <android.support.v7.widget.CardView
                    app:cardUseCompatPadding="false"
                    android:layout_marginBottom="50dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="0dp"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <LinearLayout
                        android:weightSum="7"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <com.like.LikeButton
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/like_button_whatsapp_fragement_video"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            app:circle_end_color="#5CAA4F"
                            app:circle_start_color="#7FD371"
                            app:dots_primary_color="#5CAA4F"
                            app:dots_secondary_color="#7FD371"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:icon_size="30dp"
                            app:anim_scale_factor="10"
                            app:like_drawable="@drawable/ic_whatsapp"
                            app:unlike_drawable="@drawable/ic_whatsapp" />
                        <com.like.LikeButton
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/like_button_messenger_fragement_video"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            app:circle_end_color="#0656F7"
                            app:circle_start_color="#3AD5F9"
                            app:dots_primary_color="#0656F7"
                            app:dots_secondary_color="#3AD5F9"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:icon_size="30dp"
                            app:anim_scale_factor="10"
                            app:like_drawable="@drawable/ic_messenger"
                            app:unlike_drawable="@drawable/ic_messenger" />
                        <com.like.LikeButton
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/like_button_facebook_fragement_video"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            app:circle_end_color="#064D93"
                            app:circle_start_color="#5397EA"
                            app:dots_primary_color="#064D93"
                            app:dots_secondary_color="#5397EA"
                            app:icon_size="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:anim_scale_factor="10"
                            app:like_drawable="@drawable/ic_facebook"
                            app:unlike_drawable="@drawable/ic_facebook" />
                        <com.like.LikeButton
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/like_button_instagram_fragement_video"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            app:circle_end_color="#8A3293"
                            app:circle_start_color="#FEA150"
                            app:dots_primary_color="#8A3293"
                            app:dots_secondary_color="#FEA150"
                            app:icon_size="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:anim_scale_factor="10"
                            app:like_drawable="@drawable/ic_instagram"
                            app:unlike_drawable="@drawable/ic_instagram" />
                        <com.like.LikeButton
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/like_button_twitter_fragement_video"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            app:circle_end_color="#32c2df"
                            app:circle_start_color="#ffffff"
                            app:dots_primary_color="#32c2df"
                            app:dots_secondary_color="#ffffff"
                            app:icon_size="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:anim_scale_factor="10"
                            app:like_drawable="@drawable/ic_twitter"
                            app:unlike_drawable="@drawable/ic_twitter" />
                        <com.like.LikeButton
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/like_button_snapshat_fragement_video"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            app:circle_end_color="#dfcb32"
                            app:circle_start_color="#ffffff"
                            app:dots_primary_color="#dfd932"
                            app:dots_secondary_color="#ffffff"
                            app:icon_size="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:anim_scale_factor="10"
                            app:like_drawable="@drawable/ic_snapchat"
                            app:unlike_drawable="@drawable/ic_snapchat" />
                        <com.like.LikeButton
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:id="@+id/like_button_hike_fragement_video"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            app:circle_end_color="#32c2df"
                            app:circle_start_color="#ffffff"
                            app:dots_primary_color="#32c2df"
                            app:dots_secondary_color="#ffffff"
                            app:icon_size="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:anim_scale_factor="10"
                            app:like_drawable="@drawable/ic_hink"
                            app:unlike_drawable="@drawable/ic_hink" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/card_view_wallpaper_comments"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:cardCornerRadius="10dp"
        app:cardElevation="11dp"
        android:layout_above="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relative_layout_comment_back"
                android:layout_alignParentTop="true"
                android:background="@drawable/border_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/image_view_comment_box_close"
                    android:tint="@color/dark_gray"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@drawable/ic_close"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:tint="@color/dark_gray"
                        android:padding="15dp"
                        app:srcCompat="@drawable/ic_comment"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:id="@+id/text_view_comment_box_count"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:gravity="center"
                        android:textColor="@color/dark_gray"
                        android:text="122 Comments"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </RelativeLayout>
            <ScrollView
                android:layout_below="@+id/relative_layout_comment_back"
                android:layout_above="@+id/relative_layout_comment_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:layout_marginTop="70dp"
                        android:contentDescription="@string/app_name"
                        android:visibility="gone"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:padding="40dp"
                        android:tint="@color/colorPrimary"
                        android:id="@+id/imageView_empty_comment"
                        app:srcCompat="@drawable/bg_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        android:layout_centerInParent="true"
                        android:layout_marginTop="200dp"
                        android:progressDrawable="@drawable/progress_comment"
                        android:indeterminateDrawable="@drawable/progress_comment"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="8dp"
                        android:id="@+id/progress_bar_comment_list" />
                </RelativeLayout>
            </ScrollView>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/relative_layout_comment_back"
                android:layout_above="@+id/relative_layout_comment_section"
                android:visibility="visible"
                android:id="@+id/recycle_view_comment"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:padding="7dp"
                android:background="@drawable/border_line_top_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relative_layout_comment_section">
                <EditText
                    android:hint="@string/write_comment"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:visibility="visible"
                    android:layout_marginRight="40dp"
                    android:textCursorDrawable="@null"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/edit_text_comment_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:padding="5dp"
                    android:id="@+id/image_button_comment_add"
                    app:srcCompat="@drawable/ic_send"
                    android:tint="@color/colorPrimaryDark"
                    android:layout_alignParentRight="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ProgressBar
                    android:visibility="gone"
                    android:progressDrawable="@drawable/progress_comment"
                    android:indeterminateDrawable="@drawable/progress_comment"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/progress_bar_comment_add" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/relativeLayout"
        app:cardCornerRadius="25dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp">
                <com.like.LikeButton
                    android:id="@+id/like_button_like_fragement_video"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:icon_size="40dp"
                    app:like_drawable="@drawable/ic_like"
                    app:unlike_drawable="@drawable/ic_like" />
                <TextView
                    android:id="@+id/text_view_like_fragement_video"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="9dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/primary_text"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_card_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp">
